<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/divider"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/primary_text"
            android:text="@string/create_user"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/id_tomorrow_checkbox"
            android:layout_toEndOf="@+id/id_tomorrow_checkbox"
            android:layout_gravity="center_horizontal" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary_text"
                android:text="@string/name"
                android:id="@+id/f1"
                android:layout_alignParentTop="true">
            </TextView>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/name"
                android:layout_marginTop="5dp"
                android:textColorHint="@android:color/darker_gray"
                android:background="#fff"
                android:textColor="@color/secondary_text"
                android:ems="10"
                android:textSize="20sp"
                android:maxLength="20"
                android:id="@+id/id_add_dialog_name"
                android:layout_below="@+id/f1"

                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lname"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:id="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_below="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/lname"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/secondary_text"
                android:background="#fff"
                android:maxLength="20"
                android:textSize="20sp"
                android:id="@+id/id_add_member_dialog_last_user_name"
    />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_email"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:id="@+id/textView4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <AutoCompleteTextView
                android:layout_below="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:maxLength="30"
                android:background="#fff"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/secondary_text"
                android:hint="@string/user_email"
                android:id="@+id/id_add_member_dialog_name_email"
          />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_below="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:hint="@string/password"
                android:textColorHint="@android:color/darker_gray"
                android:background="#fff"
                android:textColor="@color/secondary_text"
                android:maxLines="1"
                android:maxLength="20"
                android:id="@+id/id_add_member_dialog_password"
         />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_add_member_create_button"
                android:text="@string/create"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_add_member_cancel_button"
                android:text="@string/cancel"
                android:textColor="@color/primary_text"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>